<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    //이메일 인증


    //이메일 인증 텍스트

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="비밀번호 재설정"
        android:textSize="25dp"
        android:textStyle="bold" />

    // 이름 입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        //이메일 입력

        <EditText
            android:id="@+id/reset_id"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_edge"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="ID"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_id_check"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/id_check"
            android:stateListAnimator="@null"
            android:text="check" />
    </LinearLayout>

    // 패스워드 입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        //패스워드 입력
        <EditText
            android:id="@+id/reset_pw"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/textview_edge"
            android:hint="PW"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:password="true"/>

    </LinearLayout>

    // 패스워드 레이아웃_2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        //패스워드 재입력
        <EditText
            android:id="@+id/reset_repeatpw"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/textview_edge"
            android:hint="Repeat PW"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:password="true"/>

        // 동일 여부 체크 표시


        // 동일 여부 체크 표시


    </LinearLayout>

    // 패스워드 저장하기

    <Button
        android:id="@+id/btn_pw_reset"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="#A9A9F5"
        android:stateListAnimator="@null"
        android:text="RESET"
        android:textSize="15dp" />




</LinearLayout>
