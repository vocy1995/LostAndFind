<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

    //이메일 인증
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center|left"
        android:background="@drawable/edge"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Email Authentication" />

    //이메일 인증 텍스트
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="이메일 인증"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    //인증번호 입력
    <TextView
        android:id="@+id/textView3"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/textview_edge"
        android:text="인증번호를 입력하세요"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />

    // 인증 설명 텍스트
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="전송된 인증번호를 3분 이내에 입력하세요."
        android:textSize="13dp"
        android:textColor="#CD5C5C"
        android:gravity="center_vertical"
        android:paddingLeft="70dp"/>

    // 이메일 인증 시간
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3:00"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    // 인증하기
    <Button
        android:id="@+id/emailAuth_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#A263FA"
        android:text="OK"
        android:textSize="22sp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:stateListAnimator="@null"/>

</LinearLayout>
