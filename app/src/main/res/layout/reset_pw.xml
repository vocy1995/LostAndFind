<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    //이메일 인증

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edge"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="PW RESET"
        android:textSize="20dp"
        android:textStyle="bold" />

    //이메일 인증 텍스트

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="비밀번호 재설정"
        android:textSize="25dp"
        android:textStyle="bold" />

    // 이름 입력

    <EditText
        android:id="@+id/textView_id"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_edge"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="아이디를 입력하세요" />

    // 패스워드 입력

    <EditText
        android:id="@+id/textView_pw_r1"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_edge"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="PW를 입력하세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        //패스워드 재입력

        <EditText
            android:id="@+id/textView_PW2"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:background="@drawable/textview_edge"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="패스워드를 재입력 하세요"
            android:textSize="15dp" />

        // 동일 여부 체크 표시

        <ImageView
            android:id="@+id/setImage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:scaleType="fitStart" />


    </LinearLayout>

    // 패스워드 저장하기

    <Button
        android:id="@+id/btn_pw_save"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="#A9A9F5"
        android:stateListAnimator="@null"
        android:text="SAVE"
        android:textSize="15dp" />




</LinearLayout>
